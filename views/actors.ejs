<!DOCTYPE html>
<html lang="en">
	<head>
		<% include partials/head %>
	</head>
	<body class="container">
		<header>
			<% include partials/header %>
		</header>
		
		<main>
			<div class="jumbotron">

			<div>
		
        <form method="post" action="/ractors">
		 
           <% if(typeof(errorMessage) !== 'undefined') {%>
              <span><%= errorMessage %></span>
           <% } %>
		 
           <div class="form-group">
              <label for="message">Name</label>
              <input type="text" class="form-control" name="name" id="name"
                 placeholder="name" required="true"/>
				 
              <label for="message">Scale</label>
              <input type="text" class="form-control" name="scale" id="scale"
                 placeholder="scale" required="true"/>
           </div>
		   
	          <p>
	             <button type="submit" name="submit" id="submit" class="btn btn-default">Add</button>
	          </p>
			
	       </form>
		
		<a href='/relationships'>Add relationships</a>
		
		<h2>Actors</h2>
		<table class="table table-hover">
		<% actors.forEach(function(actor) { %>
		   <tr>
		     <td><%= actor.id %></td>
			 <td><%= actor.name %></td>
			 <td><%= actor.scale %></td>
			 <td><a href="<%= actor.id %>"> edit </a></td>
			 <td><a href="<%= actor.id %>"> delete </a></td>
		   </tr>
		<% }); %>
		</table>
		</main>
		
		<footer>
			<% include partials/footer %>
		</footer>
	</body>
</html>